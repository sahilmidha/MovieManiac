<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2">

        <TextView
            android:id="@+id/id_textView_original_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:background="#FE5C5C"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fefcfc"
            android:autoText="true" />

        <ImageView
            android:id="@+id/id_imageView_thumbnail"
            android:layout_width="185dp"
            android:layout_height="278dp"
            android:layout_column="0"
            android:layout_margin="@dimen/image_thumbnail_margin"
            android:layout_row="1"
            android:layout_rowSpan="8"
            android:adjustViewBounds="true"
            android:padding="@dimen/image_poster_margin" />

        <TextView
            android:id="@+id/id_textView_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/id_textView_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_textView_plot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="9"
            android:layout_margin="@dimen/image_poster_margin"
            android:padding="@dimen/image_poster_padding"
            />

    </GridLayout>
</ScrollView>