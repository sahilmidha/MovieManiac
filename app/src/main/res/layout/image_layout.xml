<!-- A CardView that contains a ImageView -->
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/five_dp"
    android:elevation="@dimen/one_dp"
    android:padding="@dimen/eight_dp"
    card_view:cardCornerRadius="@dimen/four_dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_image_view_movie_list"
            android:layout_width="165dp"
            android:layout_height="240dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/id_textView_original_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_image_view_movie_list"
            android:paddingLeft="@dimen/five_dp"
            android:paddingTop="@dimen/five_dp"
            android:singleLine="true"
            android:textSize="@dimen/thirteen_dp"
            android:layout_marginLeft="@dimen/two_dp"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical">

            <ImageView
                android:id="@+id/id_image_view_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_textView_original_title"
                android:src="@drawable/ic_1462150239_heart"/>

            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/id_textView_original_title"
                            android:layout_toRightOf="@+id/id_image_view_heart"
                            android:orientation="vertical">
                <TextView
                    android:id="@+id/id_textView_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/one_dp"
                    android:textSize="@dimen/twelve_dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/id_textView_RatingTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/id_textView_rating"
                    android:paddingTop="@dimen/five_dp"
                    android:textSize="@dimen/eight_dp"/>

                <TextView
                    android:id="@+id/id_textView_totalVotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/id_textView_rating"
                    android:layout_below="@+id/id_textView_rating"
                    android:layout_marginTop="-3dp"
                    android:textSize="@dimen/twelve_dp"/>
                <TextView
                    android:id="@+id/id_textView_release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/five_dp"
                    android:layout_marginRight="@dimen/two_dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/twelve_dp"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
